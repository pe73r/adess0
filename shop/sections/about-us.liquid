<style>
  #section-{{ section.id }} .About__background {
    background-color: {{ section.settings.bg_color }};
  }
</style> 
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" >
    <div class="Container About__background">
    <header class="PageHeader">
      <div class="SectionHeader SectionHeader--center">
        {% comment %}<h1 class="SectionHeader__Heading Heading u-h1">{{ page.title }}</h1> {% endcomment %}
      </div>
    </header>

    <div class="PageContent PageContent--custom Rte About__margin">
      {{ page.content }}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "About",
  "settings": [
     {
       "type": "color",
       "id": "bg_color",
       "label": "Background color",
       "default": "#f2eddd"
     }
  ]
}
{% endschema %}
